<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/text_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="clip_horizontal|start|right|fill_horizontal"
    android:orientation="vertical"
    tools:context=".InfoActivity">


    <VideoView
        android:id="@+id/video"
        android:layout_width="match_parent"

        android:layout_gravity="center"
        android:layout_height="300dp"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:itemBackground="@color/darkTextColor"
        app:itemIconTint="@drawable/sellector"
        app:itemTextColor="@drawable/sellector"
        app:menu="@menu/bottom_nav_menu"/>


    <androidx.cardview.widget.CardView
        android:id="@+id/rowFG"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottom_navigation"
        android:layout_marginBottom="301dp"
        android:visibility="visible"
        app:cardCornerRadius="5dp"
        app:cardElevation="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.096"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.024">

        <FrameLayout
            android:layout_width="5dp"
            android:layout_height="64dp"
            android:background="@color/darkTextColoor" />

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/Police"
                android:layout_width="74dp"
                android:layout_height="66dp"
                android:background="@color/register_bk_color"
                android:clickable="true"
                android:src="@drawable/ic_baseline_phone_24" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:background="@android:color/white"
                android:clickable="true"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/FullName"
                    style="@style/AppTheme"
                    android:layout_width="150dp"
                    android:layout_height="35dp"
                    android:text="Police"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/Age"
                    android:layout_width="78dp"
                    android:layout_height="35dp"
                    android:text="Numero"
                    app:layout_constraintVertical_bias="0.0" />

            </LinearLayout>

            <TextView
                android:id="@+id/Group"
                android:layout_width="111dp"
                android:layout_height="53dp"
                android:gravity="center"
                android:text="197"
                android:textColor="@color/darkTextColor"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.351"
                app:layout_constraintStart_toEndOf="@+id/FullName"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.196" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/rowFG2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottom_navigation"
        android:layout_marginBottom="202dp"
        android:visibility="visible"
        app:cardCornerRadius="5dp"
        app:cardElevation="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.096"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.024">

        <FrameLayout
            android:layout_width="5dp"
            android:layout_height="64dp"
            android:background="@color/darkTextColoor" />

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/SAMU"
                android:layout_width="74dp"
                android:layout_height="66dp"
                android:background="@color/register_bk_color"
                android:clickable="true"
                android:src="@drawable/ic_baseline_phone_24" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:background="@android:color/white"
                android:clickable="true"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/sse"
                    style="@style/AppTheme"
                    android:layout_width="150dp"
                    android:layout_height="35dp"
                    android:text="Samu"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/numS"
                    android:layout_width="78dp"
                    android:layout_height="35dp"
                    android:text="Numero"
                    app:layout_constraintVertical_bias="0.0" />

            </LinearLayout>

            <TextView
                android:id="@+id/NumSu"
                android:layout_width="111dp"
                android:layout_height="53dp"
                android:gravity="center"
                android:text="190"
                android:textColor="@color/darkTextColor"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.351"
                app:layout_constraintStart_toEndOf="@+id/FullName"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.196" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/rowFG3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottom_navigation"
        android:layout_marginBottom="103dp"
        android:visibility="visible"
        app:cardCornerRadius="5dp"
        app:cardElevation="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.096"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.024">

        <FrameLayout
            android:layout_width="5dp"
            android:layout_height="64dp"
            android:background="@color/darkTextColoor" />

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/Protection"
                android:layout_width="74dp"
                android:layout_height="66dp"
                android:background="@color/register_bk_color"
                android:clickable="true"
                android:src="@drawable/ic_baseline_phone_24" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:background="@android:color/white"
                android:clickable="true"
                android:orientation="vertical">

                <TextView
                    style="@style/AppTheme"
                    android:layout_width="150dp"
                    android:layout_height="35dp"
                    android:text="Protection civil"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="78dp"
                    android:layout_height="35dp"
                    android:text="Numero"
                    app:layout_constraintVertical_bias="0.0" />

            </LinearLayout>

            <TextView
                android:layout_width="111dp"
                android:layout_height="53dp"
                android:gravity="center"
                android:text="198"
                android:textColor="@color/darkTextColor"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.351"
                app:layout_constraintStart_toEndOf="@+id/FullName"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.196" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>


</RelativeLayout>