<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".QuizHome">


<LinearLayout
    android:id="@+id/appName"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:layout_marginLeft="20dp"
    android:layout_marginEnd="-391dp"
    android:layout_marginRight="-391dp"
    android:layout_toStartOf="@+id/appName"
    android:layout_toLeftOf="@+id/appName"
    android:gravity="center"
    android:orientation="horizontal">


</LinearLayout>



<LinearLayout
    android:id="@+id/layoutJ"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:layout_alignParentBottom="true"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="134dp"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="8dp">

        <TextView
            android:id="@+id/startQuizBtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/loginButton"
            android:background="@color/colorAccent"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text=" Start Test"
            android:textSize="25sp"
            tools:ignore="DuplicateIds" />

    </androidx.cardview.widget.CardView>

</LinearLayout>


<ImageView
    android:layout_width="500dp"
    android:layout_height="3000dp"
    android:layout_alignBottom="@+id/layoutJ"
    android:layout_alignParentStart="true"
    android:layout_alignParentLeft="true"
    android:layout_marginStart="-9dp"
    android:layout_marginLeft="-9dp"
    android:layout_marginTop="-500dp"
    android:layout_marginRight="-474dp"
    android:layout_marginBottom="-121dp"
    android:src="@drawable/logo"
    tools:ignore="DuplicateIds,InvalidId" />

<TextView
    android:id="@+id/sucessTextView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignBottom="@+id/layoutJ"
    android:layout_alignParentTop="true"
    android:layout_marginTop="260dp"
    android:layout_marginBottom="304dp"
    android:gravity="center"
    android:text="Welcom to Alzheimer's Test"
    android:textColor="#18277C"
    android:textSize="25sp"
    android:textStyle="bold" />
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bottom_navigation"
        android:layout_alignParentBottom="true"
        app:itemBackground="@color/darkTextColor"
        app:itemTextColor="@drawable/sellector"
        app:itemIconTint="@drawable/sellector"
        app:menu="@menu/bottom_nav_menu" />

</RelativeLayout>